@model SocialNoteMark.Models.Bulletin

@{
    ViewBag.Title = "公告创建";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>创建</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>公告</h4>
        <hr />
