@model SocialNoteMark.Models.Bulletin

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{    @Html.AntiForgeryToken()

<h2>招募修改</h2>
<div class="row">
    <div class="col-md-12 ">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <div class="panel-title">
                    招募信息
                </div>
            </div>
            <div class="panel-body">
                <div class="span12">
                    <div>
                        <div>



                            <div class="form-group">
                                <label for="Content" class="control-label col-md-2">标题：</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <hr /><hr /><hr />
                            <div class="form-group">
                                <label for="Content" class="control-label col-md-2">内容：</label>                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <hr /><hr /><hr />

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <a class="btn btn-primary" href="/recruitBulletin/">
            <span class="glyphicon  glyphicon-chevron-left" aria-hidden="true"></span>
            返回我的招募
        </a>
        <a class="btn btn-primary" href="/recruitBulletin/Details/@Model.BulletionID">
            <span class="glyphicon  glyphicon-list-alt" aria-hidden="true"></span>
            招募详情
        </a>
        <input type="submit" value="Save" class="btn btn-danger" />
    </div>
</div>

<div class="form-group" style="display:none">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.BulletionID)
    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })

    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })



    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })

    @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })


    @Html.LabelFor(model => model.Flag, htmlAttributes: new { @class = "control-label col-md-2" })
    @Html.EditorFor(model => model.Flag, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Flag, "", new { @class = "text-danger" })





    @Html.LabelFor(model => model.CreateDate, htmlAttributes: new { @class = "control-label col-md-2" })

    @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })

</div>}